<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ir.topcoders.pol">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme.WithoutActionBar">
        <activity
            android:name=".view.activities.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.AboutActivity"
            android:label="@string/title_abouts"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.RoadListActivity"
            android:label="@string/title_roads"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.RoadDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.BridgeListActivity"
            android:label="@string/title_bridges"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.BridgeDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.MapSelectActivity"
            android:label="@string/title_select_map"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.DamageDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.activities.CameraActivity"
            android:label="@string/title_capture_image"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.activities.BackupActivity"
            android:label="@string/title_backup"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>